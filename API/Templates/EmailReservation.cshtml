@model API.Features.Reservations.ReservationEmailTemplateVM

<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
</head>

<body>
    <div id="wrapper">
        <table>
            <tr>
                <td style="font-family: Tahoma; font-size: 13px; padding-bottom: 1rem;">👋 Greetings sailors,</td>
            </tr>
            <tr>
                <td style="font-family: Tahoma; font-size: 13px;">We are sending you the official invoice and the lease agreement for your records.</td>
            </tr>
            <tr>
                <td style="font-family: Tahoma; font-size: 13px; padding-bottom: 1rem;">We are also sending you the Wi-Fi credentials, pillar card instructions and toilets & showers codes.</td>
            </tr>
            <tr>
                <td style="color:red; font-family: Tahoma; font-size: 13px; padding-bottom: 1rem;">⚠️ Important: Check-out by 14:00 on the departure day. Departures between 14:00 and 20:00 are charged 50% the daily fee.</td>
            </tr>
            <tr>
                <td style="color:blue; font-family: Tahoma; font-size: 13px; padding-bottom: 3rem;">🎶 Would you like to experience live music during your stay at the marina? <a href="https://www.corfumusicexperiences.com/">Join</a> our unique events every Monday, Tuesday and some Wednesdays. 🎶</td>
            </tr>
            <tr>
                <td style="font-family: Tahoma; font-size: 13px;">Thank you for staying with us and best regards,</td>
            </tr>
            <tr>
                <td style="font-family: Tahoma; font-size: 13px;">@Model.UserFullname</td>
            </tr>
            <tr>
                <td style="font-family: Tahoma; font-size: 13px;">Phones: @Model.CompanyPhones</td>
            </tr>
            <tr>
                <td style="font-family: Tahoma; font-size: 13px;">Email: @Model.Email</td>
            </tr>
            <tr>
                <td style="font-family: Tahoma; font-size: 13px;">Website: @Model.Website</td>
            </tr>
            </tr>
        </table>
        <table>
            <tr>
                <td>
                    <img alt="" src="https://appbenitsesmarina.com/images.png">
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td style=" font-family: Tahoma; font-size: 13px;">🚫 This email was created by a computer. Do not reply.</td>
            </tr>
        </table>
    </div>
</body>

</html>